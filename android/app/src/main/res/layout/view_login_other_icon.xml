<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/verificationLoginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他账号登录:"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/huaWeiButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/signup_ic_huawei"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/verificationLoginTextView" />


    <ImageView
        android:id="@+id/qqButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/signup_ic_qq"
        app:layout_constraintStart_toEndOf="@+id/huaWeiButton" />


    <ImageView
        android:id="@+id/wechatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/signup_ic_wechat"
        app:layout_constraintStart_toEndOf="@+id/qqButton" />


</android.support.constraint.ConstraintLayout>